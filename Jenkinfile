pipeline{
    agent any;
    stages{
        stage("code"){
            steps{
                git url:"https://github.com/Swayamnakshane/java_quotes_app.git",branch:"master"
            }
        }
        stage("build"){
            steps{
                sh "docker build -t jenkinapp ."
            }
        }
        stage("deploy"){
            steps{
                sh "docker run -d --name app -p 8000:8000 jenkinapp:latest "
            }
        }
    }
}
